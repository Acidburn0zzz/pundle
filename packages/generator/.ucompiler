{
  "defaultRule": "compile-src",
  "rules": [{
    "name": "compile-src",
    "plugins": ["babel"],
    "babel": {
      "presets": ["steelbrain"],
      "plugins": ["transform-decorators-legacy"]
    },
    "include": [{
      "directory": "src",
      "extensions": ["js"]
    }],
    "outputPath": "lib/{relativePath:4}"
  }]
}
