{
  "dependencies": {
    "babel-cli": "^6.16.0",
    "babel-preset-steelbrain": "^5.0.1",
    "eslint-config-steelbrain": "^1.0.4",
    "lerna": "2.0.0-beta.30"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap; npm run compile",
    "clean": "rm -rf packages/*/lib",
    "compile": "npm run clean; lerna exec --concurrency 999 -- babel src --out-dir lib",
    "watch": "npm run compile -- --watch",
    "lint": "eslint .",
    "publish": "npm run compile; lerna exec -- npm publish",
    "publish-lerna": "npm run compile; lerna publish",
    "test": "lerna exec --concurrency 1 -- apm test"
  }
}
