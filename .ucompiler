{
  "defaultRule": "compile-src",
  "rules": [{
    "name": "compile-src",
    "plugins": ["babel"],
    "babel": {
      "presets": ["steelbrain"]
    },
    "include": [
      {
        "directory": "packages/pundle/src",
        "extensions": ["js"]
      },
      {
        "directory": "packages/fs/src",
        "extensions": ["js"]
      }
    ],
    "outputPath": "{relativeDirectory:0:-4}/lib/{name}.js"
  }]
}
